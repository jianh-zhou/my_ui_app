}
.scroll-view-content {
  white-space: nowrap;
  font-size: 28rpx;
}
.scroll-view-content .scroll-item {
  display: inline-block;
  width: 140rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 10rpx;
  text-align: center;
  position: relative;
}
.scroll-view-content .scroll-item.active::after {
  display: block;
  height: 2rpx;
  content: '';
  position: absolute;
  bottom: 2rpx;
  background-color: #bb2c08;
  width: 100%;
