.home-container-header {
  font-size: 24rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  padding: 20rpx 0;
}
.home-container-header .home-container-logo {
  -webkit-flex-shrink: 0;
      -ms-flex-negative: 0;
          flex-shrink: 0;
  padding: 0 20rpx;
}
.home-container-header .home-container-logo image {
  width: 140rpx;
  height: 40rpx;
}
.home-container-header .home-header-input {
  background-color: #ededed;
  position: relative;
  width: 100%;
  border-radius: 10rpx;
}
.home-container-header .home-header-input input {
  padding-left: 60rpx;
  text-indent: -40rpx;
}
.home-container-header .home-header-input .header-input-pla {
  text-align: center;
}
.home-container-header .home-header-input .icon-sousuo {
  position: absolute;
  top: 50%;
  -webkit-transform: translateY(-50%);
      -ms-transform: translateY(-50%);
          transform: translateY(-50%);
  left: 20rpx;
}
.home-container-header .hone-header-btn {
  -webkit-flex-shrink: 0;
      -ms-flex-negative: 0;
          flex-shrink: 0;
  text-align: center;
  margin: 0 20rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  width: 144rpx;
  height: 52rpx;
  line-height: 52rpx;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
}
.home-scroll-view {
  white-space: nowrap;
}
.home-scroll-view .scroll-item-nav {
  font-size: 28rpx;
  display: inline-block;
  width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin: 0 10rpx;
  position: relative;
}
.home-scroll-view .scroll-item-nav.active::after {
  content: "";
  display: block;
  height: 2rpx;
  width: 100%;
  background-color: #bb2c08;
  position: absolute;
  bottom: 2rpx;
}

